{
  "name": "@revisium/mcp-memory",
  "version": "0.1.0",
  "description": "MCP server for persistent structured AI memory backed by Revisium",
  "keywords": [
    "mcp",
    "revisium",
    "memory",
    "agent",
    "ai",
    "versioned",
    "structured",
    "claude",
    "cursor"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/revisium/mcp-memory.git"
  },
  "license": "MIT",
  "author": "Anton Kashirov",
  "type": "module",
  "bin": {
    "mcp-memory": "./bin/mcp-memory.mjs"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    ".claude-plugin",
    ".mcp.json",
    "skills",
    "commands",
    "rules"
  ],
  "scripts": {
    "build": "tsdown && npm run build:dts",
    "build:dts": "tsc -p tsconfig.build.json",
    "dev": "tsdown --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns='integration'",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern='integration' --runInBand",
    "test:integration:cov": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern='integration' --runInBand --coverage --coverageDirectory=coverage-integration --silent",
    "test:integration:up": "npx @revisium/standalone --auth --port 9000 --data .revisium-test > revisium.log 2>&1 & echo $! > .revisium-test.pid",
    "test:integration:down": "if [ -f .revisium-test.pid ]; then kill $(cat .revisium-test.pid) 2>/dev/null; rm -f .revisium-test.pid; fi; rm -rf .revisium-test",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --silent --testPathIgnorePatterns='integration'",
    "lint:ci": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "tsc": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run tsc"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@revisium/client": "^0.4.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^29.7.0",
    "@revisium/standalone": "^2.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.7",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsdown": "^0.20.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "hono": ">=4.11.7",
    "lodash": ">=4.17.22"
  },
  "publishConfig": {
    "access": "public"
  }
}
